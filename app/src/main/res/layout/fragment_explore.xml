<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.explore.ExploreFragment">

    <TextView
            android:id="@+id/text_explore"
            android:text="@string/your_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.129" android:layout_marginStart="20dp"/>
    <ImageView
            android:id="@+id/search_icon"
            android:src="?android:attr/actionModeWebSearchDrawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toBottomOf="@id/text_explore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.03"/>
    <EditText
            android:id="@+id/search_destination"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:autofillHints="@string/search_destination"
            android:hint="@string/search_destination"
            android:ems="10"
            android:selectAllOnFocus="true"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_explore"
            app:layout_constraintStart_toEndOf="@id/search_icon"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="24dp"
            app:layout_constraintTop_toBottomOf="@id/search_destination"
            app:layout_constraintStart_toEndOf="@id/search_icon">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="525dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>