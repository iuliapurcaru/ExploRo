<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.planning.PlanningActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_planning"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="@+id/toolbar"/>

    <RelativeLayout
            android:id="@+id/dates_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dates"
                android:textSize="23sp"
                android:layout_marginTop="90dp"
                android:layout_marginStart="20dp" />
        <TextView
                android:id="@+id/when_is_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/when_is_trip"
                android:fontFamily="@font/poppins_light"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/dates"/>
        <EditText
                android:id="@+id/editStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="@string/start_date"
                android:autofillHints="@string/start_date"
                android:fontFamily="@font/poppins_light"
                android:textSize="16sp"
                android:ems="5"
                android:focusable="false"
                android:layout_marginStart="50dp"
                android:layout_below="@+id/when_is_trip"/>
        <EditText
                android:id="@+id/editEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="@string/end_date"
                android:autofillHints="@string/end_date"
                android:fontFamily="@font/poppins_light"
                android:textSize="16sp"
                android:ems="5"
                android:focusable="false"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/editStartDate"
                android:layout_below="@+id/when_is_trip"/>
        <ImageView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_calendar_month_24"
                android:importantForAccessibility="no"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/when_is_trip"/>
        <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:importantForAccessibility="no"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/editStartDate"
                android:layout_below="@+id/when_is_trip"/>

        <TextView
                android:id="@+id/number_of_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/who_is_traveling"
                android:textSize="23sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/editStartDate"/>
        <EditText
                android:id="@+id/num_adults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/num_of_adults"
                android:autofillHints="@string/num_of_adults"
                android:fontFamily="@font/poppins_light"
                android:textSize="16sp"
                android:ems="5"
                android:layout_marginStart="50dp"
                android:layout_below="@+id/number_of_people"/>
        <EditText
                android:id="@+id/num_students"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/num_of_students"
                android:autofillHints="@string/num_of_students"
                android:fontFamily="@font/poppins_light"
                android:textSize="16sp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/num_adults"
                android:layout_below="@+id/number_of_people"/>
        <ImageView
                android:id="@+id/people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_people_24"
                android:importantForAccessibility="no"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/number_of_people"/>

        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="15dp"
                android:layout_below="@id/num_adults"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/dates_layout"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_places_to_visit"
                android:textSize="23sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="20dp"/>

        <Button
                android:id="@+id/continue_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="@string/continue_button"
                android:backgroundTint="@color/yellow_200"
                android:textColor="@color/black"/>

    </LinearLayout>

    <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>